#!/usr/bin/env ruby

preprocess do
  # add tag pages
  all_tags(articles).each do |tag|
    path = "/bloggery/tagged/#{slugify(tag)}"
    attributes = {
      title: "Bloggery about <strong>#{tag}</strong>",
      tagged: "#{tag}"
    }

    @items.create("<%= render '/bloggery/tagged.*' %>", attributes, "#{path}/index.md")
  end

end

compile '/**/*.md' do
  filter :erb
  filter :kramdown
  layout '/default.*'
  write item.identifier.without_ext.to_s + '.html'
end

# ignore partials
compile '/**/_*.scss' do
  nil
end

# compile scss to css
# get file path -> remove extension -> route to /css -> write .css
compile '/scss/*.scss' do
  filter :sass, syntax: :scss
  write item.identifier.without_ext.to_s.gsub('scss/', 'css/') + '.css'
end

# passthrough js
passthrough '/js/**/*.js'

# route/posts/title-slug to /bloggery
route '/posts/**/*.md' do
  item.identifier.without_ext.to_s.gsub('posts/', 'bloggery/') + '.html'
end

# write post assets to the right directory
compile '/posts/**/*' do
  write item.identifier.to_s.gsub('posts/', 'bloggery/')
end

# route /pages/* to /
route '/pages/**/*' do
  item.identifier.without_ext.to_s.gsub('/pages/', '/') + '.html'
end

compile '/**/*' do
  write item.identifier.to_s
end

layout '/**/*', :erb
